<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableView?>

<?import javafx.scene.control.TableColumn?>
<TabPane fx:controller="codes.lemon.netradio.controller.StationListController" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
         prefWidth="Infinity" prefHeight="Infinity" nodeOrientation="LEFT_TO_RIGHT" tabDragPolicy="FIXED">
    <tabs>
        <!-- Default tab that lists all stations -->
        <Tab text="All" closable="false">
            <TableView fx:id="defaultTableView" prefHeight="200.0" prefWidth="Infinity" maxWidth="Infinity" onMouseClicked="#stationClicked">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="266.6" maxWidth="Infinity" />
                    <TableColumn fx:id="nameColumn" text="Station Name" prefWidth="266.6" maxWidth="Infinity"/>
                    <TableColumn fx:id="uriColumn" text="URI" prefWidth="266.6" maxWidth="Infinity" />
                </columns>
                <sortOrder>
                    <fx:reference source="idColumn"/>
                </sortOrder>
            </TableView>
        </Tab>

        <!-- Tab that lists only favourited stations -->
        <Tab text="Favourites" closable="false" >
        </Tab>

        <!-- Tab that lists the top 10 most played stations -->
        <Tab text="Most Played" closable="false" >

        </Tab>
    </tabs>
</TabPane>
