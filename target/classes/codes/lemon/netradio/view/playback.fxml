<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<!-- UI to control audio playback (play, next volume). Displays station name & track name.
     GridPane that fills width, constant height, multiple columns, 2 rows -->
<GridPane fx:controller="codes.lemon.netradio.controller.PlaybackController" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="15" prefWidth="Infinity"
          prefHeight="65.0" minWidth="400" minHeight="65.0" stylesheets="@playback.css" styleClass="playback-grid">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <gridLinesVisible>false</gridLinesVisible>
    <!-- playback control buttons -->
    <Button text="Back" alignment="CENTER" minHeight="50" minWidth="50" GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.rowSpan="2" GridPane.valignment="TOP" onAction="#previousChannel"/>
    <Button text="Play" alignment="CENTER" minHeight="50" minWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="0"
            GridPane.rowSpan="2" GridPane.valignment="TOP" onAction="#playPressed" />
    <Button fx:id="playbackButton" text="Stop" alignment="CENTER" minHeight="50" minWidth="50" GridPane.columnIndex="2" GridPane.rowIndex="0"
            GridPane.rowSpan="2" GridPane.valignment="TOP" onAction="#stopPressed" />
    <Button text="Next" alignment="CENTER" minHeight="50" minWidth="50" GridPane.columnIndex="3" GridPane.rowIndex="0"
            GridPane.rowSpan="2" GridPane.valignment="TOP" onAction="#nextChannel" />

    <!-- playback details (station & track name)-->
    <Text fx:id="stationName" text="" textAlignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="0"
          GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" styleClass="station-name-display"/>
    <Text fx:id="trackName" text="" textAlignment="CENTER" GridPane.columnIndex="4"
          GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"/>

    <!-- volume controls -->
    <Text text="VO" textAlignment="RIGHT" GridPane.columnIndex="5" GridPane.rowIndex="0" GridPane.rowSpan="1"
          GridPane.valignment="CENTER"/>
    <Slider fx:id="volumeSlider" min="0" max="100" value="100" accessibleText="volume" blockIncrement="25" minorTickCount="5"
            showTickLabels="true" showTickMarks="true" minHeight="30" minWidth="150" maxWidth="150"
            GridPane.columnIndex="6" GridPane.columnSpan="1" GridPane.rowIndex="0" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT" GridPane.valignment="CENTER"
            onMouseReleased="#mouseReleased" onMouseDragged="#mouseDragged"/>
    <Text fx:id="volumeLevel" text="" textAlignment="LEFT" wrappingWidth="30" GridPane.columnIndex="7"
          GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.valignment="CENTER"/>

    <!-- <Text fx:id="status" text="" textAlignment="LEFT" GridPane.columnIndex="0" GridPane.rowIndex="1"/> -->
</GridPane>
